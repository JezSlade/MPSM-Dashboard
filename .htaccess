# .htaccess (place beside your public/ folder)

RewriteEngine On

# Serve index.php when hitting the root
RewriteRule ^$ public/index.php [L]

# If the file/folder exists under public/, serve it
RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI} -d
RewriteRule ^(.*)$ public/$1 [L]

# Otherwise rewrite anything else to public/index.php
RewriteRule ^ public/index.php [L]
