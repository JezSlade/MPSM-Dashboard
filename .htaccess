# .htaccess â€“ serve static assets directly, route everything else to index.php

# Turn off MultiViews to avoid content-negotiation surprises
Options -MultiViews

RewriteEngine On

# 1. If the request matches a real file or directory, stop rewriting.
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. Otherwise, route the request to index.php
RewriteRule ^ index.php [L]

# 3. Explicitly ensure .js files are served with the correct MIME type
<IfModule mod_mime.c>
  AddType application/javascript .js
</IfModule>
